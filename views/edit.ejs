<!DOCTYPE html>
<html lang="en">
	<%- include("./partials/head.ejs") %>
	<body>
		<%- include("./partials/nav.ejs") %>

		<section id="collection" class="py-3">
			<div class="container">
				<!-- subtitle div here -->
				<div class="title text-center">
					<h2 class="position-relative d-inline-block"><%= title %></h2>
				</div>
				<!-- subtitle div end -->

				<!-- products content here -->
				<div class="row g-0">
					<div
						class="
							d-flex
							flex-wrap
							justify-content-center
							mt-1
							filter-button-group">
						<!-- product container here -->
					 
						<% const { _id, name, img, price, qty,description } = productsDB %>
      <div class="card mb-3 col-md-5">
       <img src=<%= img %> class="img-thumbnail" alt="productimage">
       <form action="/products/<%=_id%>?_method=PATCH" method="POST" class="text-center border border-light p-3">
        <input type="text" id="name" name="name" class="form-control mb-4" value=<%= name %>>
        <input type="text" id="img" name="img" class="form-control mb-4" value=<%= img %>>
        <input type="number" id="price" name="price" class="form-control mb-4" value=<%= price %>>
        <input type="number" id="qty" name="qty" class="form-control mb-4" value=<%= qty %>>
        <textarea type="text" id="description" name="description" class="form-control mb-4" placeholder=<%= description %>></textarea>
        <button type="submit" class="btn btn-secondary btn-lg">Update Product</button>
       </form>
       </div>
      </div>

				 

						<!-- product container end -->
					</div>
				</div>

				<!-- products content end -->
			</div>
		</section>
		<!-- end of collection -->
		<%- include("./partials/footer.ejs") %>
	</body>
</html>
